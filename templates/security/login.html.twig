{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}

    <div class="login-container">
        <div class="login-card">

            <div class="brand-header">
                {# Assure-toi que le chemin de ton logo est bon ici #}
                <img src="{{ asset('bundles/gifexception/images/Logo-Kwikker.png') }}" alt="Logo Kwikker" class="brand-logo">
                <h1 class="brand-name">Kwikker</h1>
            </div>

            <form method="post">
                {# Affichage des erreurs #}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="username" class="form-label">Login</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-input" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="_password" id="password" class="form-input" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn-submit" type="submit">
                    Se connecter
                </button>

                <div class="signup-link">
                    Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>

    <style>
        /* Reset simple */
        body, html {
            height: 100%;
            margin: 0;
            font-family: sans-serif;
        }

        /* Conteneur principal (Fond blanc) */
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #ffffff;
        }

        /* La carte (Vert sauge) */
        .login-card {
            background-color: #aebcae;
            padding: 40px;
            border-radius: 20px;
            width: 100%;
            max-width: 350px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        /* Logo et Titre */
        .brand-header {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
        }

        .brand-logo {
            width: 50px;
            height: 50px;
            margin-right: 10px;
            object-fit: contain;
        }

        .brand-name {
            font-family: 'Comic Sans MS', 'Chalkboard SE', sans-serif;
            font-size: 2rem;
            color: #2f3e2e;
            font-weight: bold;
            margin: 0;
        }

        /* Groupes de formulaire */
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            font-family: 'Courier New', Courier, monospace;
            color: #2f3e2e;
            font-size: 1.2rem;
            margin-bottom: 5px;
            padding-left: 5px;
        }

        /* --- CORRECTION ICI : COULEUR DU TEXTE --- */
        .form-input {
            width: 100%;
            padding: 12px;
            border-radius: 15px;
            border: none;
            background-color: #d9d9d9;
            font-size: 1rem;
            box-sizing: border-box;

            /* C'est ici que j'ai mis le noir pour qu'on voie ce qu'on écrit */
            color: #000000;
        }

        .form-input:focus {
            outline: 2px solid #5c6b5c;
            background-color: #e6e6e6; /* Un peu plus clair quand on clique dedans */
        }

        /* Bouton */
        .btn-submit {
            background-color: #363636;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 0.9rem;
            cursor: pointer;
            margin-top: 10px;
            width: 100%;
        }

        .btn-submit:hover {
            background-color: #000;
        }

        /* Lien inscription */
        .signup-link {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #2f3e2e;
        }
        .signup-link a {
            color: #2f3e2e;
            font-weight: bold;
            text-decoration: none;
        }
        .signup-link a:hover {
            text-decoration: underline;
        }

        /* Erreurs */
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 10px;
            border-radius: 10px;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}
